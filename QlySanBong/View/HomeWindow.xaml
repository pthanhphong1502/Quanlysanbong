<Window x:Class="QlySanBong.HomeWindow"
        
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"    
        xmlns:local="clr-namespace:QlySanBong"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity" 
        xmlns:ei="http://schemas.microsoft.com/expression/2010/interactions"
        mc:Ignorable="d"
        x:Name="wdhome"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        xmlns:UserControl="clr-namespace:QlySanBong.ResourceXAML"
        Title="Giao diện chính"
        DataContext="{StaticResource HomeVM}"
        Background="{x:Null}"
        WindowStyle="None"
        AllowsTransparency="True"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        Height="810" Width="1250"
        WindowStartupLocation="CenterScreen">
    <!--Background=""-->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <UserControl:controlbarControl Tag="{Binding Title,ElementName=wdhome}"></UserControl:controlbarControl>
        </Grid>
        <Grid Grid.Row="1" Background="#FFF8F7FC">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="180"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Grid x:Name="grMenu" 
                  Background="Transparent" 
                  Grid.ColumnSpan="2"
                  VerticalAlignment="Top"
                  HorizontalAlignment="Left"
                  Width="180" Height="779">
                <Grid.RowDefinitions>
                    <RowDefinition Height="180"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0"
                    x:Name="grdTitle"
                    Margin="0,15,0,0"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Center"
                  Background="Transparent"
                    Height="100"
                    Width="100">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="Loaded">
                            <i:InvokeCommandAction Command="{Binding loadedImageAndNameCommand}"
                                                   CommandParameter="{Binding ElementName=wdhome}"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                    <Rectangle x:Name="recAccount" Stroke="Transparent" RadiusX="15" RadiusY="15" >
                        <Rectangle.Fill>
                            <ImageBrush ImageSource="/QlySanBong;component/Image/Stad.jpg"/>
                        </Rectangle.Fill>
                    </Rectangle>
                    <TextBlock x:Name="tbUserName" FontFamily="Hierarchy" 
                           FontWeight="ExtraBold" FontSize="15" Text="Nhân viên"  HorizontalAlignment="Center"
                           Padding="10,2,0,0"
                           VerticalAlignment="Bottom" Height="20" Width="113" Margin="14,0,-5,-40"/>
                </Grid>


                <Grid  Grid.Row="1" Background="Transparent">
                    <StackPanel HorizontalAlignment="Center"
                            Margin="2,0,0,0"
                            VerticalAlignment="top"
                            Background="Transparent"
                            Width="160" 
                            Height="590"
                            Grid.RowSpan="20">
                        <Grid x:Name="grHome"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Top"
                          Height="40"
                          Width="150"
                          Margin="0,10,0,30">
                            <materialDesign:PackIcon 
                            VerticalAlignment="Top"
                            Margin="0,2,0,0"
                            x:Name="icHome"
                            Kind="HomeOutline"
                            Foreground="White"
                            Opacity="1"
                            Height="32"
                            Width="32"/>
                            <Button
                            x:Name="btnHome"
                            FontFamily="Hierarchy"
                            Style="{StaticResource MaterialDesignRaisedLightButton}"
                            Opacity="0.75"
                            Foreground="White"
                            DataContext="{StaticResource HomeVM}"
                            Background="Transparent"
                            BorderThickness="0"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Center"
                            materialDesign:RippleAssist.Feedback="#cfcfc4"
                            Content="  Trang chủ"
                            FontSize="18" Height="44" Width="146">
                                <i:Interaction.Triggers>

                                    <i:EventTrigger EventName="Click">
                                        <i:InvokeCommandAction Command="{Binding OpengrHomeCommand}"
                                                               CommandParameter="{Binding ElementName=wdhome}"/>
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </Button>
                            <Rectangle x:Name="recHome"
                                       Fill="#FF45B5AA" Panel.ZIndex="-1" 
                                       RadiusX="15" RadiusY="15"
                                       Visibility="Visible" StrokeDashArray="20"/>
                        </Grid>
                        <Grid x:Name="grBusiness"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Top"
                          Height="40"
                          Width="146"
                          Margin="0,0,0,30">
                            <materialDesign:PackIcon 
                            VerticalAlignment="Top"
                            Margin="0,2,0,0"
                            x:Name="icbusiness"
                            Kind="HandshakeOutline"
                            Foreground="Black"
                            Opacity="0.75"
                            Height="32"
                            Width="32"/>
                            <Button
                            x:Name="btnbusiness"
                            Margin="-3,0,-10,0"
                            Style="{StaticResource MaterialDesignRaisedLightButton}"
                            Foreground="Black"
                            FontFamily="Hierarchy"
                            Opacity="0.75"
                            DataContext="{StaticResource HomeVM}"
                            Background="Transparent"
                            BorderThickness="0"
                            materialDesign:RippleAssist.Feedback="#cfcfc4"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Stretch"
                            Content="  Kinh doanh"
                            FontSize="18" Height="40" Width="146">
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="Click">
                                        <i:InvokeCommandAction Command="{Binding OpengrBussinessCommand}"
                                                               CommandParameter="{Binding ElementName=wdhome}"/>
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </Button>
                            <Rectangle x:Name="recBussiness"
                                        Fill="#FF45B5AA" Panel.ZIndex="-1" 
                                       RadiusX="15" RadiusY="15"
                                       Visibility="Hidden" StrokeDashArray="20"/>
                        </Grid>
                        <Grid x:Name="grPitch"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Top"
                          Height="40"
                          Width="146"
                          Margin="0,0,0,30">
                            <materialDesign:PackIcon 
                            VerticalAlignment="Top"
                            Margin="0,5,0,0"
                            x:Name="icPitch"
                            Kind="SoccerField"
                            Opacity="0.75"
                            Foreground="Black"
                            Height="30"
                            Width="30"/>
                            <Button
                            x:Name="btnPitch"
                            Margin="-3,0,0,0"
                            Foreground="Black"
                            FontFamily="Hierarchy"
                            Opacity="0.75"
                            Style="{StaticResource MaterialDesignRaisedLightButton}"
                            DataContext="{StaticResource HomeVM}"
                            Background="Transparent"
                            BorderThickness="0"
                            materialDesign:RippleAssist.Feedback="#cfcfc4"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Stretch"
                            Content="   Sân bóng"
                            FontSize="18" Height="40" >
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="Click">
                                        <i:InvokeCommandAction Command="{Binding OpengrPitchCommand}"
                                                               CommandParameter="{Binding ElementName=wdhome}"/>
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </Button>
                            <Rectangle x:Name="recPitch"
                                       Fill="#FF45B5AA" Panel.ZIndex="-1" 
                                       RadiusX="15" RadiusY="15"
                                       Visibility="Hidden" StrokeDashArray="20"/>
                        </Grid>
                        <Grid x:Name="grGoods"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Top"
                          Height="40"
                          Width="146"
                          Margin="0,0,0,30">
                            <materialDesign:PackIcon 
                            VerticalAlignment="Top"
                            Margin="0,6,0,0"
                            x:Name="icGoods"
                            Kind="PackageVariantClosed"
                            Opacity="0.75"
                            Foreground="Black"  
                            Height="30"
                            Width="30"/>
                            <Button
                            x:Name="btnGoods"
                            Margin="-3,2,0,0"
                            Foreground="Black"
                            Style="{StaticResource MaterialDesignRaisedLightButton}"
                            FontFamily="Hierarchy"
                            Opacity="0.75"
                            DataContext="{StaticResource HomeVM}"
                            Background="Transparent"
                            BorderThickness="0"
                            VerticalAlignment="Top"
                            materialDesign:RippleAssist.Feedback="#cfcfc4"
                            HorizontalAlignment="Stretch"
                            Content="   Hàng hóa"
                            FontSize="18" Height="36">
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="Click">
                                        <i:InvokeCommandAction Command="{Binding OpengrGoodsCommand}"
                                                               CommandParameter="{Binding ElementName=wdhome}"/>
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </Button>
                            <Rectangle x:Name="recGoods"
                                       Fill="#FF45B5AA" Panel.ZIndex="-1" 
                                       RadiusX="15" RadiusY="15"
                                       Visibility="Hidden" StrokeDashArray="20"/>
                        </Grid>

                        <Grid x:Name="grEmloy"
                          HorizontalAlignment="Center" 
                          VerticalAlignment="Top"
                          Height="40"
                          Width="146"
                          Margin="0,0,0,30">
                            <materialDesign:PackIcon 
                            VerticalAlignment="Top"
                            Margin="0,2,0,0"
                            x:Name="icEmloy"
                            Kind="AccountGroup"
                            Foreground="Black"
                            Opacity="0.75"
                            Height="32"
                            Width="32"/>
                            <Button
                            x:Name="btnEmloy"
                            Margin="-3,4,0,0"
                            Foreground="Black"
                            FontFamily="Hierarchy"
                            Opacity="0.75"
                            Style="{StaticResource MaterialDesignRaisedLightButton}"
                            DataContext="{StaticResource HomeVM}"
                            Background="Transparent"
                            BorderThickness="0"
                            VerticalAlignment="Top"
                            materialDesign:RippleAssist.Feedback="#cfcfc4"
                            HorizontalAlignment="Stretch"
                            Content="     Nhân viên"
                            FontSize="18" Height="36">
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="Click">
                                        <i:InvokeCommandAction Command="{Binding OpengrEmloyCommand}"
                                                               CommandParameter="{Binding ElementName=wdhome}"/>
                                    </i:EventTrigger>

                                </i:Interaction.Triggers>
                            </Button>
                            <Rectangle x:Name="recEmloy"
                                        Fill="#FF45B5AA" Panel.ZIndex="-1" 
                                       RadiusX="15" RadiusY="15"
                                       Visibility="Hidden" StrokeDashArray="20"/>
                        </Grid>
                        <Grid x:Name="grSetting"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Top"
                          Height="40"
                          Width="145"
                          Visibility="Visible"
                          Margin="0,0,0,60">
                            <materialDesign:PackIcon 
                            VerticalAlignment="Top"
                            Margin="0,6,0,0"
                            x:Name="icSetting"
                            Kind="CogOutline"
                            Foreground="Black"
                            Opacity="0.75"
                            Height="32"
                            Width="32"/>
                            <Button
                            x:Name="btnSetting"
                            Margin="0,5,0,0"
                            Foreground="Black"
                            FontFamily="Hierarchy"
                            Opacity="0.75"
                            Background="Transparent"
                            BorderThickness="0"
                            materialDesign:RippleAssist.Feedback="#cfcfc4"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Stretch"
                            Content="Cài đặt"
                            FontSize="20" Height="36">
                            </Button>
                            <Rectangle  x:Name="recSetting"
                                       Fill="#FF45B5AA" Panel.ZIndex="-1" 
                                       RadiusX="15" RadiusY="15"
                                       Visibility="Hidden" StrokeDashArray="20"/>
                        </Grid>
                        <Grid x:Name="grOut"
                              Margin="0,40,0,0"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Bottom"
                          Height="40"
                          Width="146">
                            <materialDesign:PackIcon 
                            VerticalAlignment="Top"
                            Margin="0,6,0,0"
                            x:Name="icOut"
                            Kind="Export"
                            Foreground="#FFFF4B4B"
                            Opacity="0.75"
                            Height="32"
                            Width="32"/>
                            <Button
                            x:Name="btnOut"
                            Command="{Binding LogOutCommand}"
                            CommandParameter="{Binding ElementName=wdhome}"
                            Margin="1,5,0,-1"
                            Foreground="#FFFF4B4B"
                            FontFamily="Hierarchy"
                            Opacity="0.75"
                            Background="Transparent"
                            BorderThickness="0"
                            VerticalAlignment="Bottom"
                            HorizontalAlignment="Stretch"
                            Content="  Đăng xuất"
                            FontSize="18" Height="36">
                            </Button>
                        </Grid>

                    </StackPanel>
                    <Rectangle Stroke="#FFECF8FE"  Fill="#FFECF8FE" Width="155" RadiusX="15" RadiusY="15"  Panel.ZIndex="-1" Height="560"  VerticalAlignment="Top" Margin="0,0,0,0"/>
                </Grid>
            </Grid>
            <Grid Grid.Column="1"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Top"
                  Width="1062" Margin="0,0,65,0" >
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid x:Name="grAccount"
                      VerticalAlignment="Top"
                      Width="1063"
                      Height="62"
                      HorizontalAlignment="Left"
                      Background="White" Grid.RowSpan="2">
             
                    <Label HorizontalAlignment="Center" VerticalAlignment="Center"
                               Height="43" Width="560" 
                               FontFamily="Munich"
                               FontWeight="ExtraBlack"
                               FontSize="35"
                               Foreground="#FF8BC34A"
                               Content="QUẢN LÍ SÂN BÓNG"
                               Padding="10,0,0,0"
                               Margin="0,0,250,0">
                    </Label>
                    <materialDesign:PackIcon Kind="Soccer" Height="40" Width="40" 
                                             Foreground="#FF8BC34A"
                                              HorizontalAlignment="Left" VerticalAlignment="Center"
                                             Margin="90,0,0,0"  Opacity="0.5"/>
                    <materialDesign:PackIcon Kind="Soccer" Height="40" Width="40" 
                                             Foreground="#FF8BC34A"
                                              HorizontalAlignment="Left" VerticalAlignment="Center"
                                             Margin="490,0,0,0"  Opacity="0.5"/>
                    <!--<Button Cursor="Hand" 
                            VerticalAlignment="Center"
                            HorizontalAlignment="Right"
                            FontWeight="UltraBold"
                            BorderThickness="1"
                            BorderBrush="White"
                            Foreground="WhiteSmoke"
                            materialDesign:ButtonAssist.CornerRadius="2"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            ToolTip="Resource name: MaterialDesignRaisedButton"
                            Height="30"
                            Width="120"
                            FontSize="15"
                            Content="Điểm danh"
                            Margin="0,5,20,0">
                        

                        <Button.Background>
                            <LinearGradientBrush>
                                <GradientStop Color="#80ced7" Offset="0.45"/>
                                <GradientStop Color="#007ea7" Offset="1.1"/>
                            </LinearGradientBrush>
                        </Button.Background>
                    </Button>-->
                    <Button Height="40" Width="74" Cursor="Hand"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Background="White"
                            BorderThickness="0" Margin="0,10,18,6">
                        <TextBlock Width="31"  Height="40" VerticalAlignment="Center" HorizontalAlignment="Left">
                        <Hyperlink  NavigateUri="https://www.facebook.com/profile.php?id=100031925508672" RequestNavigate="Hyperlink_RequestNavigate" >
                            <fa:IconImage Icon="FacebookSquare" Foreground="#007ea7" Width="30" Height="40"></fa:IconImage>
                        </Hyperlink>
                        </TextBlock>
                    </Button>
                    <Button Height="40" Width="74" Cursor="Hand"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Background="White"
                            BorderThickness="0" Margin="0,10,110,6">
                        <TextBlock Width="31"  Height="40" VerticalAlignment="Center" HorizontalAlignment="Left">
                        <Hyperlink  NavigateUri="https://www.instagram.com/t.ph15" RequestNavigate="Hyperlink_RequestNavigate" >
                            <fa:IconImage Icon="Instagram" Foreground="#FFFF4B4B" Width="30" Height="40">
                            </fa:IconImage>
                        </Hyperlink>
                        </TextBlock>
                    </Button>
                </Grid>


                <!--================================Home======================-->
                <Grid 
                      x:Name="grBody_Home"
                      Grid.Row="1" Height="720"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Top"
                      Width="1090"
                      DataContext="{StaticResource ReportVM}"
                      Visibility="Visible">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="Loaded">
                            <i:InvokeCommandAction Command="{ Binding LoadReportCommad}"
                                                   CommandParameter="{Binding ElementName=wdhome}"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                    <materialDesign:Card  HorizontalAlignment="Left"
                                          VerticalAlignment="Top"
                                          Width="250"
                                          Height="150"
                                          Margin="150,15,0,0"
                                          Background="#FF756D"                                      
                                          Opacity="5.0">
                        <materialDesign:Card.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="10"/>
                            </Style>
                        </materialDesign:Card.Resources>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="3*"/>
                                <RowDefinition Height="2*"/>
                                <RowDefinition Height="2*"/>
                            </Grid.RowDefinitions>
                            <TextBlock
                                Grid.Row="0"
                                Text="Số tiền nhập hàng"
                                FontWeight="Bold"
                                FontSize="20"
                                Margin="4,7,4,4"
                                Foreground="Black" >
                            </TextBlock>
                            <TextBlock 
                                 x:Name="tbTotalMoneyImport"
                                Grid.Row="1"
                                FontSize="17"
                                HorizontalAlignment="Center"
                                Foreground="Black"
                                FontWeight="Black" />
                            <TextBlock
                                Grid.Row="2"
                                FontSize="17"
                                Foreground="WhiteSmoke"/>
                            <Grid>
                                <Ellipse Height="45"
                                         Width="45"
                                         HorizontalAlignment="Right"
                                         VerticalAlignment="Top"
                                         Margin="0,1,8,3">
                                    <Ellipse.Fill>
                                        <ImageBrush ImageSource="/Image/cash.png"/>
                                    </Ellipse.Fill>
                                </Ellipse>
                            </Grid>
                        </Grid>

                    </materialDesign:Card>

                    
                    <materialDesign:Card  HorizontalAlignment="Right"
                                          VerticalAlignment="Top"
                                          Width="250"
                                          Height="150"
                                          Margin="0,15,200,200"
                                          Background="#56C596  "                                    
                                          Opacity="5.0">
                        <materialDesign:Card.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="7"/>
                            </Style>
                        </materialDesign:Card.Resources  >
                        <Grid >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="3*"/>
                                <RowDefinition Height="2*"/>
                                <RowDefinition Height="2*"/>
                            </Grid.RowDefinitions>
                            <TextBlock
                                 Grid.Row="0"
                                Text="Số sân đã đặt"
                                FontSize="20"
                                Margin="6.2,7,4,4"
                                Foreground="Black"
                                FontWeight="Bold"/>
                            <TextBlock
                                Grid.Row="1"
                                x:Name="tbNumberofPitchIsPlaced"
                                HorizontalAlignment="Center"
                                FontSize="17"
                                Foreground="Black"
                                FontWeight="Bold"/>
                            <TextBlock
                                 Grid.Row="1"
                                 FontSize="17"
                                Foreground="White"
                                FontWeight="Bold"/>
                            <Ellipse Height="45"
                                         Width="45"
                                         HorizontalAlignment="Right"
                                         VerticalAlignment="Top"
                                         Margin="0,2,15,0">
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="/Image/iconpitch.png"/>
                                </Ellipse.Fill>
                            </Ellipse>
                        </Grid>
                    </materialDesign:Card>
                    <Label x:Name="lbTime" VerticalAlignment="Center" Height="85" Width="550" FontSize="50" 
                           FontWeight="Bold" Margin="0,0,10,140" 
                           Content="" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
                    <Label x:Name="lbTime1" VerticalAlignment="Center" Height="70" Width="550" FontSize="40" 
                           FontWeight="Bold" Foreground="LightGray"
                           Content="" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
                </Grid>

                <!--=======================================Bussiness=====================================-->
                <Grid
                x:Name="grdBody_Business"
                HorizontalAlignment="Left" 
                Height="720" 
                VerticalAlignment="Top" 
                Width="1062"
                Margin="0,0,0,-1"
                Grid.Row="1"
                DataContext="{StaticResource BusinessVM}"
                Visibility="Hidden">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="Loaded">
                            <i:InvokeCommandAction 
                            Command="{Binding LoadTodayFieldCommand}" 
                            CommandParameter="{Binding ElementName=wdhome}">
                            </i:InvokeCommandAction>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2*"></RowDefinition>
                        <RowDefinition Height="12*"></RowDefinition>
                        <RowDefinition Height="70"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid
                    Grid.Row="0"
                    HorizontalAlignment="Right" 
                    Height="50"
                    Margin="0,23,40,23"
                    VerticalAlignment="Center"
                    Width="1020">
                        <DatePicker 
                        x:Name="dpPickedDate"
                        HorizontalAlignment="Left" 
                        Padding="0"
                        materialDesign:HintAssist.Hint="Chọn ngày" 
                        Width="160" 
                        Height="50"
                        BorderThickness="0" 
                        FontSize="18"
                        Foreground="Black" 
                        HorizontalContentAlignment="Left"
                        VerticalContentAlignment="Center" 
                        FontWeight="SemiBold">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="SelectedDateChanged" >
                                    <ei:CallMethodAction TargetObject="{Binding  }" 
                                                     MethodName="SetPickedDay" />
                                </i:EventTrigger>
                                <i:EventTrigger EventName="SelectedDateChanged">
                                    <i:InvokeCommandAction Command="{Binding LoadFieldCommand}" 
                                                       CommandParameter="{Binding ElementName=wdhome}"/>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </DatePicker>
                        <Button 
                        x:Name="btnHireField"     
                        Content="Đặt sân"
                        Foreground="White"
                        Height="40"
                        materialDesign:ButtonAssist.CornerRadius="2"
                        ToolTip="Đặt sân" 
                        Margin="0,0,20,0" 
                        FontSize="18" 
                        VerticalAlignment="Center" 
                        FocusVisualStyle="{x:Null}"
                        Width="130"
                        Visibility="Hidden"
                        HorizontalAlignment="Right" 
                        Padding="0,0,0,2" 
                        FontWeight="SemiBold" >
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction Command="{Binding OpenBookingCommand}"
                                                       CommandParameter="{Binding ElementName=wdhome}"/>

                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </Button>
                        <Button 
                        x:Name="btn"     
                        Content="Hôm nay"
                        Height="40"
                        Foreground="White"
                        materialDesign:ButtonAssist.CornerRadius="2"
                        ToolTip="Xem thông tin ngày hôm nay" 
                        Margin="250,0,0,0" 
                        FontSize="18" 
                        Background="#FF45B5AA "
                        BorderBrush="#FF45B5AA "
                        VerticalAlignment="Center" 
                        FocusVisualStyle="{x:Null}"
                        Width="100"
                        HorizontalAlignment="Left" 
                        Padding="0,0,0,2" 
                        FontWeight="SemiBold" >
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="Click">
                                    <i:InvokeCommandAction Command="{Binding LoadTodayFieldCommand}" 
                                                       CommandParameter="{Binding ElementName=wdhome}"/>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </Button>
                    </Grid>
                    <Grid 
                    Grid.Row="1" 
                    ScrollViewer.HorizontalScrollBarVisibility="Auto"
                    ScrollViewer.VerticalScrollBarVisibility="Disabled" 
                    Margin="40,10,45,10">
                        <Grid 
                        HorizontalAlignment="Left" 
                        VerticalAlignment="Top"
                        ScrollViewer.CanContentScroll="False" 
                        ScrollViewer.VerticalScrollBarVisibility="Disabled" >
                            <Grid
                            Width="130" 
                            Height="50"
                            Margin="0" 
                            HorizontalAlignment="Left" 
                            VerticalAlignment="Top" 
                            Background="#FF45B5AA ">
                                <TextBlock 
                                Text="Giờ" 
                                HorizontalAlignment="Center" 
                                Margin="0" 
                                TextWrapping="Wrap" 
                                VerticalAlignment="Center"
                                TextAlignment="Center" 
                                FontSize="18"
                                Foreground="White" 
                                FontWeight="SemiBold" />
                            </Grid>
                            <StackPanel 
                            x:Name="stkFieldTitle" 
                            Orientation="Horizontal" 
                            VerticalAlignment="Top" 
                            Height="50" 
                            CanHorizontallyScroll="True" 
